<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="br.rio.puc.inf.app.activecal" android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".ActiveCal"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.AtendeeScreen"/>
        <activity android:name=".screen.CalendarScreen"/>
        <activity android:name=".screen.ComingEventsScreen"/>
        <activity android:name=".screen.DetailScreen"/>
        <activity android:name=".screen.EventScreen"/>
        <activity android:name=".screen.LoginScreen"/>
        <activity android:name=".screen.MenuScreen"/>
        <activity android:name=".screen.MyPositionScreen"/>
        <activity android:name=".screen.SetupScreen"/>
</application>
    
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_LOCATION"></uses-permission>

</manifest> 